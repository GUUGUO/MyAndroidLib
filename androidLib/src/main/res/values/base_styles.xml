<resources>


    <!-- 日间模式 -->
    <style name="AppTheme.day" parent="AppTheme">
        <item name="android:windowBackground">@color/day_main_base_bg</item>
        <item name="containerBackgroundLayer2">@color/day_main_front_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="myTitleTextColor">@color/day_title_text</item>
        <item name="android:textColor">@color/day_text</item>
        <item name="subtitleTextColor">@color/day_sub_title_text</item>
        <item name="android:colorForeground">@color/design_fab_stroke_top_outer_color</item>
        <item name="android:textColorHint">@color/day_hint</item>
        <item name="android:textColorLink">@color/day_hint</item>
        <item name="containerBackgroundLayer1">@color/day_main_base_bg</item>
    </style>
    <!-- 夜间模式 -->
    <style name="AppTheme.night" parent="AppTheme">
        <item name="android:windowBackground">@color/night_main_bg</item>
        <item name="containerBackgroundLayer2">@color/night_main_front_bg</item>
        <item name="colorPrimary">@color/night_actionbar_background</item>
        <item name="myTitleTextColor">@color/night_title_text</item>
        <item name="android:textColor">@color/night_text</item>
        <item name="android:textColorHint">@color/night_hint</item>
        <item name="android:textColorLink">@color/night_hint</item>
        <item name="containerBackgroundLayer1">@color/night_main_bg</item>

    </style>

    <style name="Widget.Design.Snackbar" parent="android:Widget">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:minWidth">@dimen/design_snackbar_min_width</item>
        <item name="android:maxWidth">@dimen/design_snackbar_max_width</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">@color/white100</item>
        <item name="android:paddingLeft">@dimen/design_snackbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/design_snackbar_padding_horizontal</item>
        <item name="elevation">@dimen/design_snackbar_elevation</item>
        <item name="maxActionInlineWidth">@dimen/design_snackbar_action_inline_max_width</item>
    </style>

    <style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:textColorPrimary">@color/material_red</item>-->
        <!--<item name="android:textColorSecondary">@color/white100</item>-->
        <!--<item name="colorControlNormal">?android:textColor</item>-->
        <item name="actionMenuTextColor">@color/white100</item>
        <item name="android:editTextColor">?android:textColor</item>

    </style>

    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="text_item_title_bold">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title_item</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_item_title">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title_item</item>
    </style>

    <style name="text_level1_title">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_level2_title">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_hint">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">?android:textColorLink</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="under_line">
        <item name="android:background">@color/black20</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
