  <!-- toolbar弹出菜单样式 -->
  <style name="ToolbarPopupTheme" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
    <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
    <item name="overlapAnchor">false</item>
    <!-- 弹出层背景颜色 -->
    <item name="android:popupBackground">@color/colorPrimary</item>
    <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
    <item name="android:dropDownVerticalOffset">5dp</item>
    <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
    <item name="android:dropDownHorizontalOffset">0dp</item>
    <item name="android:colorBackground">@color/white</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="Toolbar.Dark" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColor">@color/white</item>
    <item name="titleTextColor">@color/white</item>
    <item name="colorControlNormal">@color/white</item>
    <item name="contentInsetStart">0dp</item>
    <item name="contentInsetStartWithNavigation">0dp</item>
  </style>

  <style name="Toolbar.Light" parent="Base.ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@color/black</item>
    <item name="android:textColor">@color/black</item>
    <item name="titleTextColor">@color/black</item>
    <item name="contentInsetStart">0dp</item>
    <item name="contentInsetStartWithNavigation">0dp</item>
  </style>

  <style name="MyTheme" parent="Base.Theme.AppCompat.Light">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="actionMenuTextColor">@color/white100</item>
    <item name="android:editTextColor">?android:textColor</item>
  </style>

  <style name="text_item_title_bold">
    <item name="android:textColor">?myTitleTextColor</item>
    <item name="android:textSize">@dimen/title_item</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="text_item_title">
    <item name="android:textColor">?myTitleTextColor</item>
    <item name="android:textSize">@dimen/title_item</item>
  </style>

  <style name="text_level1_title">
    <item name="android:textColor">?myTitleTextColor</item>
    <item name="android:textSize">@dimen/title1</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="text_level2_title">
    <item name="android:textColor">?myTitleTextColor</item>
    <item name="android:textSize">@dimen/title2</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="text_hint">
    <item name="android:textColor">?android:textColorHint</item>
    <item name="android:textSize">@dimen/hint</item>
  </style>

  <style name="text_link">
    <item name="android:textColor">?android:textColorLink</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="under_line">
    <item name="android:background">@color/black40</item>
    <item name="android:layout_height">1px</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="under_line_20">
    <item name="android:background">@color/black20</item>
    <item name="android:layout_height">1px</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="vertical_line">
    <item name="android:background">@color/black40</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">1px</item>
  </style>

  <style name="under_dash">
    <item name="android:background">@drawable/bg_dash_line</item>
    <item name="android:layout_height">2px</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layerType">software</item>
  </style>
</resources>
