<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.bianla.app.app.bean.HomeRecommendBean" />

        <import type="android.view.View" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.guuguo.android.lib.widget.roundview.RoundBgImageView
            android:id="@+id/iv_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:avatarUrl="@{bean.user.imageUrl}"
            app:gender="@{bean.user.isMale()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="@color/avatar_color"
            app:riv_border_width="1dp"
            app:riv_corner_radius="10dp"
            tools:src="@drawable/appicon" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:text="@{bean.user.nickName}"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="芭比" />

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text='@{"LV."+bean.user.level}'
            android:textColor="#FF8A00"
            app:layout_constraintBottom_toBottomOf="@+id/tv_username"
            app:layout_constraintStart_toEndOf="@+id/tv_username"
            app:layout_constraintTop_toTopOf="@+id/tv_username"
            tools:text="LV.6" />

        <TextView
            android:id="@+id/community_author_time_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text='@{bean.latestReplyTimeStr+"   "+bean.position}'
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            tools:text="28分钟之前  四川省成都市成华区" />

        <TextView
            android:id="@+id/tv_btn_follow"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/community_fllow_selector"
            android:enabled="true"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/common_gray_green_text_selector"
            android:textSize="12sp"
            app:isFollow="@{bean.isFollowed}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar" />


        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:visibility="@{bean.hasImage?View.VISIBLE:View.GONE}"
            app:home_img_radius="@{2}"
            app:home_img_url="@{bean.getImageOne()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/iv_pic2"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar"
            tools:src="@drawable/community_default_image" />


        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            android:visibility="@{(bean.hasImage&amp;&amp;bean.getImageTwo()!=null)?View.VISIBLE:View.GONE}"
            app:home_img_radius="@{2}"
            app:home_img_url="@{bean.getImageTwo()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/iv_pic1"
            app:layout_constraintTop_toTopOf="@id/iv_pic1"
            tools:src="@drawable/community_default_image" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:maxEms="30"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_pic1"
            tools:text="#对比照#" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/community_zan_selector"
            android:enabled='@{!bean.isPraised,default=false}'
            android:text='@{bean.likeCount+"",default=12345}'
            android:textColor="#999999"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment"
            app:layout_constraintEnd_toStartOf="@+id/tv_comment"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_comment"
            tools:text="1125" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/community_faxian_pinglun_icon"
            android:text='@{bean.replyCount+"",default=231}'
            android:textColor="#999999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_share"
            app:layout_constraintStart_toEndOf="@+id/tv_like"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="评论" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/community_faxian_zhuanfa_icon"
            android:text='@{bean.shareCount+"",default=344}'
            android:textColor="#999999"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_comment"
            app:layout_constraintTop_toTopOf="@+id/tv_comment"
            tools:text="10" />
    </android.support.constraint.ConstraintLayout>
</layout>