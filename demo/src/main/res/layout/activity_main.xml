    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_wave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="WaveView"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/colorPrimaryBlue"
      app:rv_backgroundPressColor="@color/colorPrimary"
      app:rv_cornerRadius="3dp"
      app:rv_isRippleEnable="true"
      app:rv_strokeColor="@color/black20"
      app:rv_strokePressColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_dialog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="dialog"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/colorPrimaryBlue"
      app:rv_cornerRadius="3dp"
      app:rv_isRippleEnable="true"
      app:rv_strokeColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="测试"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/colorPrimaryBlue"
      app:rv_cornerRadius="3dp"
      app:rv_isRippleEnable="true"
      app:rv_strokeColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_guild"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="引导"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/colorPrimaryBlue"
      app:rv_cornerRadius="3dp"
      app:rv_isRippleEnable="true"
      app:rv_strokeColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_motion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="motion"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/colorPrimaryBlue"
      app:rv_cornerRadius="3dp"
      app:rv_isRippleEnable="true"
      app:rv_strokeColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
  </top.guuguo.myapplication.RoundFlowLayout>
</FrameLayout>