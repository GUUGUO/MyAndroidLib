<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <FrameLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@color/blue"
    android:elevation="5dp"/>
  <top.guuguo.myapplication.RoundFlowLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_vertical"
    android:padding="20dp"
    android:orientation="vertical"
    app:columnNumbers="0"
    app:divideSpace="20dp"
    app:rv_backgroundColor="?containerBackgroundLayer2"
    app:rv_cornerRadius="3dp"
    app:rv_strokeColor="@color/black20"
    app:rv_strokeWidth="1px"
    tools:context="top.guuguo.myapplication.ui.activity.MainActivity">
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_theme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="主题"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/color_green"
      app:rv_cornerRadius="3dp"/>

    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_divider"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="DividerView"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/color_green"
      app:rv_cornerRadius="3dp"/>

    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:background="@color/colorPrimary"
      android:gravity="center"
      android:text="ProgressView"
      android:textColor="@color/black80"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/migray"
      app:rv_backgroundPressColor="@color/colorPrimary"
      app:rv_cornerRadius="3dp"
      app:rv_strokeColor="@color/black20"
      app:rv_strokePressColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:layout_width="wrap_content"
      android:id="@+id/v_recycler"
      android:padding="10dp"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary"
      android:gravity="center"
      android:text="RecyclerView"
      android:textColor="@color/black80"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/migray"
      app:rv_backgroundPressColor="@color/colorPrimary"
      app:rv_cornerRadius="3dp"
      app:rv_strokeColor="@color/black20"
      app:rv_strokePressColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary" />
    <com.guuguo.android.lib.widget.roundview.RoundTextView
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/v_flowlayout"
        android:gravity="center"
        android:text="FlowLayout"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:rv_isRippleEnable="true"
        app:rv_backgroundColor="@color/color_red_ccfa3c55"
        app:rv_backgroundPressColor="@color/colorPrimary"
        app:rv_cornerRadius="3dp"
        app:rv_strokeColor="@color/black20"
        app:rv_strokePressColor="@color/black20"
        app:rv_strokeWidth="1px"
        app:rv_textPressColor="@color/colorPrimary" />
    <com.guuguo.android.lib.widget.roundview.RoundTextView
      android:id="@+id/v_swip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:text="SwipeNavigationLayout"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:rv_backgroundColor="@color/color_red_ccfa3c55"
      app:rv_backgroundPressColor="@color/colorPrimary"
      app:rv_cornerRadius="3dp"
      app:rv_isRippleEnable="true"
      app:rv_strokeColor="@color/black20"
      app:rv_strokePressColor="@color/black20"
      app:rv_strokeWidth="1px"
      app:rv_textPressColor="@color/colorPrimary"/>
    <!--<com.guuguo.android.lib.widget.roundview.RoundTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:padding="10dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/v_state"-->
        <!--android:gravity="center"-->
        <!--android:text="状态"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="16sp"-->
        <!--app:rv_isRippleEnable="true"-->
        <!--app:rv_backgroundColor="@color/color_red_ccfa3c55"-->
